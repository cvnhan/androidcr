<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_pressed" />
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="@color/tab_pressed" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_pressed" />
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="@color/tab_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/progress_gray" />
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="@color/progress_gray" />
        </shape>
    </item>
</selector>