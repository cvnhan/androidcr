<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.TextMedium" parent="Base.TextAppearance.AppCompat.Medium"/>

    <style name="TextInput">
        <item name="android:textAppearance">@style/AppTheme.TextMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
