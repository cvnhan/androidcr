<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.TextMedium" parent="Base.TextAppearance.AppCompat.Medium"/>

    <style name="TextInput">
        <item name="android:textAppearance">@style/AppTheme.TextMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:background">@drawable/view_pressed</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="IconSize">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
